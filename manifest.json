	"browser_action": {
		"default_title": "WOT",
		"default_icon": "skin/fusion/19_19/default.png",
		"default_popup": "ratingwindow.html"
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"wot.js",
				"content/common.js",
				"content/warning.js",
				"content/url.js",
				"content/popup.js",
				"content/search.js"
			],
			"run_at": "document_start",
			"all_frames": true 
		}, {
			"matches": [
				"http://www.mywot.com/*",
				"https://www.mywot.com/*"
			],
			"js": [
				"wot.js",
				"content/common.js",
				"content/my.js",
				"content/settings.js"
			],
			"run_at": "document_start",
			"all_frames": true 
		}
	],
	"update_url": "http://api.mywot.com/chromeupdates.xml",
	"options_page": "options.html"
}
